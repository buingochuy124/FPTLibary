@model List<DataAccess.DTO.CategoryDTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Category Name
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.CategoryName
        </td>
        <td>
            <a href="/Category/CategoryGetListBook?CategoryID=@item.CategoryID"><i class="fa fa-eye">List book of category</i>  </a>
        </td>
    </tr>
}

</table>
